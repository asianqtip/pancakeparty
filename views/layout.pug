doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title Pancake Party - #{title}
        script(src="//code.jquery.com/jquery-1.11.1.min.js")
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
        link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet")
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.7.6/css/mdb.min.css" )
        script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.7.6/js/mdb.min.js")
        script(script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
        link(href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet")
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous")

    body
        nav(class="navbar navbar-expand-md navbar-dark bg-steel navbar-fixed-top")
            div(class="container")
                span(class="w-100 d-lg-none d-block")
                a(class="navbar-brand" href="/")
                    img(src="/images/logo.png" alt='logo' height="30" class="logo")
                a(class="navbar-brand" href="/") Pancake Party
                button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggle" aria-controls="navbarToggle" aria-expanded="false" aria-label="Toggle navigation" style="float:right")
                    span(class="navbar-toggler-icon")
                div(class="collapse navbar-collapse" id="navbarToggle")
                    div(class="navbar-nav ml-auto flex-nowrap")
                        form(class='input-group' method='POST' action="/search" id="search")
                            input(type="text" placeholder="Search.." name ="query" class="form-control py-2 border-right-0 border")
                            input(type="hidden" name="sort"  value="default")
                            span(class="input-group-append")
                                div(class="input-group-text bg-white")
                                    i(class="fa fa-search")
                    ul(class="navbar-nav ml-auto flex-nowrap")
                        if user
                            li(class="nav-item")
                                a(class="nav-link" href="/addrecipe") Add Recipe
                            li.nav-item
                                a(class="nav-link"  href="/browse") Browse
                        if !user
                            li.nav-item
                                a(class="nav-link" href="/browse") Browse
                            li.nav-item
                                a(class="nav-link" href="/login") Login
                            li.nav-item
                                a(class="nav-link" href="/register") Register
                    if user
                        div(class="navbar-nav")
                            li(class="nav-item avatar dropdown")
                                a(class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-55" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                                    img(src="/images/Avatar.png"  class="md-avatar rounded-circle size-1" alt="avatar image")
                                div(class="dropdown-menu dropdown-menu-lg-right dropdown-secondary" aria-labelledby="navbarDropdownMenuLink-55" )
                                    a(class="dropdown-item" href="/myaccount") My Account
                                    a(class="dropdown-item" href="/logout") Logout
        div
            block content
