extends layout

block content
    main(role="main" class="container")
        if errors
            each error in errors
                div(class="alert alert-danger") #{ error }
        if success
            each s in success
                div(class="alert alert-success") #{ s }
        .row
            div(class="login")
                h1(class="display-4.m-b-2" align="center") Register

                form(method='POST' action='/register')
                    div.form-group
                        label(for='username') Username:
                        input#username.form-control(type='text' name='username', required)
                    div.form-group
                        label(for='password') Password:
                        input.form-control(type='password', name='password', id='password', required)
                    div.form-group
                        label(for='confirmPassword') Confirm Password:
                        input.form-control(type='password', name='confirmPassword', id='confirmPassword', required)
                    button.btn.btn-primary(type='submit') Sign Up